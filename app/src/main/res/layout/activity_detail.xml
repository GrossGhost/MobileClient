<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:focusableInTouchMode="true"
              >

             <TextView
                  android:text="TextView"
                 android:textAppearance="@style/TextAppearance.AppCompat.Title"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/goodsTitle"
                 android:textSize="27sp"
                 android:textAlignment="center" />

             <ImageView
                  android:layout_width="230dp"
                 app:srcCompat="@mipmap/ic_launcher"
                 android:layout_gravity="center_horizontal"
                 android:id="@+id/goodsPhoto"
                 android:layout_height="230dp" />

             <TextView
                  android:text="Product Description :"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                   android:fontFamily="serif"
                   android:textAlignment="viewStart" />

              <TextView
                  android:text="TextView"
                  android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/goodsText"
                  android:fontFamily="serif"
                  android:textSize="20sp"
                  android:textAlignment="viewStart" />


                <RatingBar
                 android:layout_width="wrap_content"
                   android:layout_height="44dp"
                  android:id="@+id/ratingBar"
                  android:layout_gravity="right"
                 android:numStars="5"
                 android:stepSize="1"
                 style="@style/Widget.AppCompat.RatingBar" />

                <EditText
                   android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                 android:ems="10"
                 android:id="@+id/editTextPostReview"
                 android:textAlignment="viewStart"
                 android:hint="Type your review" />

                <Button
                    android:text="Submit Review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onPostReviewClick"
                    android:id="@+id/btnPostReview" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewRewiew"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </ScrollView>


